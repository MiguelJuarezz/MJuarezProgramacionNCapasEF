@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Usuario</h2>
    <p>Aqui puede ver, editar o agrgar a un usuario</p>
    <p>Para agregar un usuario presione el boton verde</p>
    <p>Para editar un usuario presione el boton amarillo</p>
    <p>Para eliminar un usuario presione el boton rojo</p>

    <div class="row">
        <div style="float:right">
            @Html.ActionLink("+", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <hr />

    <div class="row">

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Editar</th>
                    <th class="hidden">IdUsuario</th>
                    <th>Nombre</th>
                    <th>Fecha Nacimiento</th>
                    <th>Sexo</th>
                    <th>Telefono</th>
                    <th>Email</th>
                    <th>UserName</th>
                    <th class="hidden">Password</th>
                    <th>Celular</th>
                    <th>Curp</th>
                    <th>Id Rol</th>
                    <th>Direccion</th>
                    <th>Fotografia</th>
                    <th>Eliminar</th>
                </tr>

            </thead>
            <tbody>
                @foreach (ML.Usuario usuario in Model.Usuarios)
                {
                    <tr>
                        <td class="text-center"><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Usuario", new { IdUsuario = usuario.IdUsuario})"></a></td>
                        <td class="hidden">@usuario.IdUsuario</td>
                        <td>@usuario.Nombre @usuario.ApellidoPaterno @usuario.ApellidoMaterno</td>
                        <td>@usuario.FechaNacimiento</td>
                        <td>@usuario.Sexo</td>
                        <td>@usuario.Telefono</td>
                        <td>@usuario.Email</td>
                        <td>@usuario.UserName</td>
                        <td class="hidden">@usuario.Password</td>
                        <td>@usuario.Celular</td>
                        <td>@usuario.Curp</td>
                        <td>@usuario.Rol.Nombre</td>
                        <td>
                            @usuario.Direccion.Calle @usuario.Direccion.NumeroInterior @usuario.Direccion.NumeroExterior @usuario.Direccion.Colonia.Nombre
                            @usuario.Direccion.Colonia.CosdigoPostal @usuario.Direccion.Colonia.Municipio.Nombre @usuario.Direccion.Colonia.Municipio.Estado.Nombre
                            @usuario.Direccion.Colonia.Municipio.Estado.Pais.Nombre
                        </td>
                        @*@if (usuario.Imagen != null)
                        {
                            <td><img src="data:image/*;base64,@Convert.ToBase64String(usuario.Imagen)" style=" height:150px; width:100px;"/></td>

                        }
                        else
                        {
                            <td><img src="~/Imagenes/SinUsuario.png" style=" height:150px; width:100px;"/></td>
                        }*@
                        <td class="text-center"><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Usuario", new { IdUsuario = usuario.IdUsuario })" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>


                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
